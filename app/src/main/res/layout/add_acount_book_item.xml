<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_bottom_btn_click_background">
    <ImageView
        android:id="@+id/add_account_book_icon_imageView"
        android:layout_margin="20dp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/suite_bg_for_baby"/>
    <LinearLayout
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/add_account_book_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#313131"
            android:textSize="16sp"
            android:text="生意账本"/>
        <TextView
            android:id="@+id/add_account_book_content_textView"
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="12sp"
            android:text="帮你轻松大力生意流水账"/>
    </LinearLayout>
    <ImageView
        android:layout_marginRight="20dp"
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_forum_bottom_tab_right_arrow"/>
</LinearLayout>
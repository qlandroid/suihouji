<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/look_board_change_item_left_icon"
            android:layout_margin="@dimen/look_board_list_change_item_icon_margin"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/base_icon_size"
            android:layout_height="@dimen/look_board_list_change_item_icon_size"
            android:src="@drawable/bottom_board_icon_add"/>
        <FrameLayout
            android:background="@drawable/selector_button_click_background"
            android:clickable="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/look_board_change_item_icon"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_trans_item_day"
                    android:layout_width="@dimen/look_board_list_change_item_icon_size"
                    android:layout_height="@dimen/look_board_list_change_item_icon_size" />
                <LinearLayout
                    android:layout_marginLeft="@dimen/action_bar_icon_padding"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/look_board_change_item_title"
                        android:textColor="@color/baseTextTitleColor"
                        android:textSize="@dimen/base_text_title_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="今天"/>
                    <TextView
                        android:layout_marginTop="@dimen/base_distance_top"
                        android:textColor="@color/baseTextContentColor"
                        android:id="@+id/look_board_change_item_content"
                        android:textSize="@dimen/base_text_content_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="经典内容"/>
                </LinearLayout>
            </LinearLayout>

            <include android:id="@+id/view_divider" layout="@layout/view_divider" />
        </FrameLayout>
    </LinearLayout>
   <View
       android:id="@+id/look_board_change_item_masking_view"
       android:background="#77e4e4e4"
       android:visibility="gone"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:clickable="true"/>
</FrameLayout>
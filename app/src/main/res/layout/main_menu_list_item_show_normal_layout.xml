<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/main_menu_list_item_normal_layout"
    android:layout_height="wrap_content">
    <View
        android:id="@+id/main_menu_list_item_view"
        android:layout_width="5dp"
        android:layout_alignTop="@+id/main_menu_list_item_book_normal_layout"
        android:layout_alignBottom="@+id/main_menu_list_item_book_normal_layout"
        android:layout_height="wrap_content"
        android:background="#63ffb1" />
    <LinearLayout
        android:id="@+id/main_menu_list_item_book_normal_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/main_menu_list_item_book_normal_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/suite_bg_for_baby" />

        <TextView
            android:id="@+id/main_menu_list_item_book_name_normal_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="日常生活"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
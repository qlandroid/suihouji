<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="6dp"
    android:clickable="true"
    android:background="@drawable/main_recycler_item_click_background"
   >
    <ImageView
        android:id="@+id/main_recycler_item_iv"
        android:layout_width="@dimen/main_look_board_icon_size"
        android:layout_height="@dimen/main_look_board_icon_size"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/action_bar_padding"
        android:layout_marginTop="@dimen/base_margin"
        android:layout_marginBottom="@dimen/base_margin"
        android:layout_marginRight="@dimen/action_bar_padding"
        android:src="@drawable/icon_trans_item_month"
        />
    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:id="@+id/main_title_layout"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/main_recycler_item_title_tv"
            android:layout_width="wrap_content"
            android:textColor="@color/baseTextTitleColor"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="今天"/>
        <TextView
            android:id="@+id/main_recycler_item_content_tv"
            android:layout_marginTop="@dimen/base_distance_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/baseTextContentColor"
            android:textSize="12sp"
            android:text="2016年10月18号 "/>
    </LinearLayout>

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/main_item_outlay_layout"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/main_recycler_item_expend_tv"
            style="@style/main_recycler_item_budget_tv"
            android:text="00.00"/>
        <TextView
            android:id="@+id/main_recycler_item_income_tv"
            style="@style/main_recycler_item_outlay_tv"
            android:text="00.00"
            />
    </LinearLayout>
    <TextView
        android:layout_gravity="center_vertical"
        android:id="@+id/main_recycler_item_financing_tv"
        android:visibility="gone"
        android:textColor="#f78400"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8888理财金" />
    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_margin="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/finance_wallet_arrow_right"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/main_top_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/head_report_business_trip_bg"/>
    <ImageView
        android:layout_alignParentRight="true"
        android:id="@+id/main_content_message_iv"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        style="@style/main_content_message_iv"
        android:src="@drawable/message_center_icon"/>
    <ImageView
        android:layout_alignTop="@+id/main_content_message_iv"
        android:id="@+id/main_content_take_notes_iv"
        android:layout_toLeftOf="@+id/main_content_message_iv"
        style="@style/main_content_take_notes_iv"
        android:src="@drawable/travel_book_super_trans_template_quick_enter_icon"/>
    <ImageView
        android:id="@+id/main_content_message_red_iv"
        style="@style/main_content_message_red_iv_size"
        android:layout_alignTop="@+id/main_content_message_iv"
        android:layout_alignRight="@+id/main_content_message_iv"
        android:src="@drawable/message_remind_red_point"/>
    <LinearLayout
        android:id="@+id/main_content_income_layout"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/board_1"
            style="@style/main_content_income_title_tv"
            android:text="本月收入:"/>
        <TextView
            android:id="@+id/board_number_1"
            style="@style/main_content_base_tv"
            android:text="0.00"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/main_content_expend_number_layout"
        android:layout_above="@+id/main_content_income_layout"
        android:layout_alignLeft="@id/main_content_income_layout"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/board_number_0"
            style="@style/main_content_expend_number_tv"
            android:text="0.00"/>
        <com.example.suishouji.view.ShowHideNumberImageView
            android:id="@+id/main_content_show_hide_iv"
            style="@style/main_content_show_hide_iv"
            android:background="@drawable/main_content_show_hide_number_iv"
            xmlns:show="http://schemas.android.com/apk/res-auto"
            show:showClickTrueImage="@drawable/travel_book_hide_money_false"
            show:showClickFalseImage="@drawable/travel_book_hide_money_true"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/main_content_hide_number_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/board_0"
        android:layout_above="@+id/main_content_expend_number_layout"
        android:layout_alignLeft="@id/main_content_expend_number_layout"
        style="@style/main_content_base_tv"
        android:text="本月支出"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/main_content_income_layout"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/board_2"
            style="@style/main_content_base_tv"
            android:text="预算余额:"/>
        <TextView
            android:id="@+id/board_number_2"
            style="@style/main_content_budget_number_tv"
            android:text="0.00"/>
    </LinearLayout>

</RelativeLayout>
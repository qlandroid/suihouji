<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="main_bottom_tab_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="main_bottom_tab_iv">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="main_bottom_tab_layout">
        <item name="android:padding">2dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/main_bottom_tab_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="main_bottom_tab_item_layout">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="text_base">

    </style>
    <style name="main_content_base_tv" parent="text_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
    </style>
    <style name="main_content_expend_number_tv" parent="main_content_base_tv">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="main_content_income_title_tv" parent="main_content_base_tv">
    </style>
    <style name="main_content_budget_number_tv" parent="main_content_base_tv">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="main_content_top_iv_base_size">
        <item name="android:layout_width">26dp</item>
        <item name="android:layout_height">26dp</item>
    </style>
    <style name="main_content_message_iv" parent="main_content_top_iv_base_size">

    </style>
    <style name="main_content_take_notes_iv" parent="main_content_top_iv_base_size">
        <item name="android:layout_marginRight">20dp</item>
    </style>
    <style name="main_content_message_red_iv_size">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
    </style>
    <style name="main_content_show_hide_iv">
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="main_recycler_item_tv_base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="main_recycler_item_outlay_tv" parent="main_recycler_item_tv_base">
        <item name="android:textColor">@color/main_recycler_item_outlay_tv</item>
    </style>
    <style name="main_recycler_item_budget_tv" parent="main_recycler_item_tv_base">
        <item name="android:textColor">@color/main_recycler_item_budget_tv</item>
    </style>

    <style name="cost_top_base_tv">
        <item name="android:textColor">@color/action_bar_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="cost_top_number_tv" parent="cost_top_base_tv">
        <item name="android:textSize">30sp</item>
    </style>
    <style name="action_bar_icon_style">
        <item name="android:layout_margin">@dimen/action_bar_icon_padding</item>
        <item name="android:layout_width">@dimen/action_bar_icon_size</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:layout_height">@dimen/action_bar_icon_size</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="action_bar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:background">@color/action_bar_background</item>
    </style>
    <style name="action_bar_title_style">
        <item name="android:textColor">@color/select_action_bar_click_color</item>
        <item name="android:layout_marginLeft">@dimen/action_bar_text_padding_left</item>
        <item name="android:textSize">@dimen/action_bar_text_size</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="icon_text_color">
        <item name="android:textColor">#fff</item>
    </style>

    <style name="face_board_top_view_background">
        <item name="android:layerType">software</item>
        <item name="android:background">@drawable/shape_view_dotline</item>
    </style>

    <style name="face_board_top_board_text_style">
        <item name="android:textColor">@color/face_board_top_left_text_color</item>
        <item name="android:textSize">@dimen/face_board_top_left_text_size</item>
    </style>

    <style name="face_board_content_title_text_style">
        <item name="android:textColor">#303030</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="face_board_content_content_text_style">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/face_board_top_left_text_color</item>
    </style>
    <style name="face_board_title_text_style">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/face_board_top_left_text_color</item>
    </style>
    <style name="face_board_content_icon_style">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/action_bar_icon_padding</item>
    </style>
    <style name="face_board_title_layout_style">
        <item name="android:background">@color/white_background</item>
        <item name="android:paddingTop">@dimen/face_board_content_title_paddingTop</item>
        <item name="android:paddingLeft">@dimen/base_margin</item>
        <item name="android:paddingRight">@dimen/action_bar_padding</item>
        <item name="android:paddingBottom">@dimen/action_bar_padding</item>
    </style>
    <style name="face_board_content_layout_style">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_button_click_background_0</item>
        <item name="android:paddingBottom">@dimen/action_bar_padding</item>
        <item name="android:paddingTop">@dimen/action_bar_padding</item>
        <item name="android:paddingRight">@dimen/action_bar_padding</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="face_board_change_list_bottom_text_style">
        <item name="android:layout_marginLeft">@dimen/base_margin</item>
        <item name="android:layout_marginTop">@dimen/look_board_list_change_bottom_text_margin</item>
        <item name="android:layout_marginBottom">@dimen/look_board_list_change_bottom_text_margin</item>
    </style>
</resources>
